<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgot_password_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/redressed"
            android:text="@string/app_name"
            android:textColor="@color/primary"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/forgotPass_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/email_icon"
            android:drawablePadding="8dp"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="10dp"
            android:drawableTint="#cccccc"
            android:layout_marginVertical="5dp"
            android:background="@drawable/textinput_bg_dark"
            android:hint="Email"
            android:autofillHints="emailAddress"/>

        <TextView
            android:id="@+id/login_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:layout_marginTop="20dp"
            android:background="@drawable/textinput_bg_dark"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="8dp"
            android:textSize="14sp"
            android:paddingVertical="4dp"
            android:layout_gravity="end"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/retrievePass_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Retrieve Password"
                android:elevation="0dp"
                android:textColor="@color/white"
                app:cornerRadius="7dp"
                android:backgroundTint="@color/primary"/>
            <ProgressBar
                android:id="@+id/forgotPass_loading_indicator"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:progressTint="@color/white"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>