<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_activity"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/primary"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp">
            <LinearLayout
                android:id="@+id/greeting_user"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Hi, Hossana"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/greeting"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/em_hero"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/greeting_user"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:itemActiveIndicatorStyle="@color/primary"
        app:menu="@menu/bottom_nav"
        app:itemBackground="@null"
        app:itemRippleColor="@null"
        android:background="@drawable/bottom_nav_bg_dark"
        app:itemTextColor="@drawable/bottom_nav_icon_bg"
        app:itemIconTint="@drawable/bottom_nav_icon_bg"
        app:labelVisibilityMode="labeled"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>